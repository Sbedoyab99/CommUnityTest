
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Titulo" @bind-Value="@News.Title" />
            <ValidationMessage For="@(() => News.Title)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudDatePicker Label="Fecha" Date="@News.Date" DateChanged="OnDateChange" />
            <ValidationMessage For="@(() => News.Date)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Contenido" @bind-Value="@News.Content" Variant="Variant.Outlined" Lines="25" />
            <ValidationMessage For="@(() => News.Content)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Imagenes" @bind-Value="@News.Picture" />
            <ValidationMessage For="@(() => News.Picture)" />
        </MudItem>
        <MudItem>
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="ReturnAction"><i class="bi bi-arrow-left" /> Regresar</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit"><i class="bi bi-floppy" /> Guardar Cambios</MudButton>
        </MudItem>
    </MudGrid>
</EditForm> 