@page "/news/{ResidentialunitId:int}"

@if (residentialUnit is null)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="card-header">
            <span>
                <i class="bi bi-megaphone" /> Noticias - Unidad Residencial: @residentialUnit.Name
                <a class="btn btn-sm btn-primary float-end mx-1" href="/news/create/@residentialUnit.Id"><i class="bi bi-plus-square" />  Crear Noticia</a>
                <a class="btn btn-sm btn-success float-end" href="/residentialUnits"><i class="bi bi-arrow-left" />  Regresar</a>

            </span>
        </div>
        <div class="card-body">
            <GenericList MyList="news!">
                <Body>

                    @if (currentRecordsNumber != "todos")
                    {
                        <FilterComponent ApplyFilter="SetFilterValue" />
                    }
                    <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectedPage="SelectedPageAsync" SelectedRecordsNumber="SetRecordsNumber" />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> <i class="bi bi-card-heading" /> Titulo</th>
                                <th> <i class="bi bi-calendar" /> Fecha</th>
                                <th> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in news!)
                            {
                                <tr>
                                    <td>@news.Title</td>
                                    <td>@news.Date</td>
                                    <td>
                                        <a href="/news/edit/@news.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil" /> Editar</a>
                                        <button @onclick=@(() => DeleteAsync(news)) class="btn btn-sm btn-danger"><i class="bi bi-trash" /> Borrar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </Body>
            </GenericList>
        </div>
    </div>
}
