<MudTable Items="@ResidentialUnits" Dense="true" Hover="true" Bordered="false" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Unidades Residenciales</MudText>
        <MudSpacer />
        <FilterComponent ApplyFilter="SetFilterValue" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Nombre</MudTh>
        <MudTh>Direccion</MudTh>
        <MudTh>Ciudad</MudTh>
        <MudTh>Apartamentos</MudTh>
        <MudTh>Zonas Comunes</MudTh>
        <MudTh>Noticias</MudTh>
        <MudTh>Acciones</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nombre">@context.Name</MudTd>
        <MudTd DataLabel="Direccion">@context.Address</MudTd>
        <MudTd DataLabel="Ciudad">@context.City</MudTd>
        <MudTd DataLabel="Apartamentos">@context.ApartmentsNumber</MudTd>
        <MudTd DataLabel="Zonas Comunes">@context.CommonZonesNumber</MudTd>
        <MudTd DataLabel="Noticias">@context.NewsNumber</MudTd>

    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

<div class="d-flex flex-wrap mt-4">
    <MudSwitch @bind-Checked="@hover" Color="Color.Primary">Hover</MudSwitch>
    <MudSwitch @bind-Checked="@dense" Color="Color.Secondary">Dense</MudSwitch>
    <MudSwitch @bind-Checked="@striped" Color="Color.Tertiary">Striped</MudSwitch>
    <MudSwitch @bind-Checked="@bordered" Color="Color.Warning">Bordered</MudSwitch>
    <MudSpacer />
    <div style="min-width:200px;">
        <MudText Inline="true" Class="align-self-center">Selected1: @selectedItem1?.Name</MudText>
    </div>
</div>