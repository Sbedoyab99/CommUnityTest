@page "/vehicles/{ApartmentId:int}"

@if (apartment is null)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="card-header">
            <span>
                <i class="bi bi-car-front-fill" /> Vehículos - Apartamento: @apartment.Number
                <a class="btn btn-sm btn-primary float-end mx-1" href="/vehicles/create/@apartment.Id"><i class="bi bi-plus-square" />  Crear Vehículo</a>
                <a class="btn btn-sm btn-success float-end" href="/apartments/@apartment.ResidentialUnitId"><i class="bi bi-arrow-left" />  Regresar</a>

            </span>
        </div>
        <div class="card-body">
            <GenericList MyList="vehicle!">
                <Body>

                    @if (currentRecordsNumber != "todos")
                    {
                        <FilterComponent ApplyFilter="SetFilterValue" />
                    }
                    <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectedPage="SelectedPageAsync" SelectedRecordsNumber="SetRecordsNumber" />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> <i class="bi bi-card-heading" /> Placa</th>
                                <th> <i class="bi bi-card-heading" /> Tipo</th>
                                <th> <i class="bi bi-card-heading" /> Descripción</th>
                                <th> <i class="bi bi-card-heading" /> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicle in vehicle!)
                            {
                                <tr>
                                    <td>@vehicle.Plate</td>
                                    <td>@vehicle.Type</td>
                                    <td>@vehicle.Description</td>

                                    <td>
                                        <a href="/vehicles/edit/@vehicle.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil" /> Editar</a>
                                        <button @onclick=@(() => DeleteAsync(vehicle)) class="btn btn-sm btn-danger"><i class="bi bi-trash" /> Borrar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </Body>
            </GenericList>
        </div>
    </div>
}
