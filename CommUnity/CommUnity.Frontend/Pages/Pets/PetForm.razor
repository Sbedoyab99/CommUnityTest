
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Class="mb-4">
        <MudItem xs="12" sm="6">
            <MudTextField Label="Nombre" @bind-Value="@Pet.Name" />
            <ValidationMessage For="@(() => Pet.Name)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Raza o tipo" @bind-Value="@Pet.Breed" />
            <ValidationMessage For="@(() => Pet.Breed)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Imagen" @bind-Value="@Pet.Picture" />
            <ValidationMessage For="@(() => Pet.Picture)" />
        </MudItem>
    </MudGrid>
    <MudItem xs="12" sm="6">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">Guardar Cambios</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="ReturnAction">Regresar</MudButton>
    </MudItem>
</EditForm>
