@page "/commonzones/{ResidentialunitId:int}"

@if (residentialUnit is null)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="card-header">
            <span>
                <i class="bi-buildings" /> @residentialUnit.Name
                <a class="btn btn-sm btn-primary float-end mx-1" href="/commonzones/create/@residentialUnit.Id"><i class="bi bi-plus-square" />  Crear Zona Común</a>
                <a class="btn btn-sm btn-success float-end" href="/residentialUnits"><i class="bi bi-arrow-left" />  Regresar</a>

            </span>
        </div>
        <div class="card-body">
            <GenericList MyList="commonZones!">
                <Body>

                    @if (currentRecordsNumber != "todos")
                    {
                        <FilterComponent ApplyFilter="SetFilterValue" />
                    }
                    <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectedPage="SelectedPageAsync" SelectedRecordsNumber="SetRecordsNumber" />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> <i class="bi bi-building" /> Zona Común</th>
                                <th> <i class="bi bi-people" /> Capacidad</th>
                                <th style="width:470px"><i class="bi bi-tools" /> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var commonZone in commonZones!)
                            {
                                <tr>
                                    <td>@commonZone.Name</td>
                                    <td>@commonZone.Capacity</td>
                                    <td>
                                        <a href="/commonzones/edit/@commonZone.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil" /> Editar</a>
                                        <button @onclick=@(() => DeleteAsync(commonZone)) class="btn btn-sm btn-danger"><i class="bi bi-trash" /> Borrar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </Body>
            </GenericList>
        </div>
    </div>
}
